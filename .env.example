# Database
DATABASE_URL="postgresql://user:password@localhost:5432/promeasure_dev?schema=public"

# Para produção com connection pooling (Supabase/Neon/Railway)
# DATABASE_URL="postgresql://user:password@host:5432/promeasure_prod?pgbouncer=true&connection_limit=10"

# Auth (exemplo com NextAuth.js)
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Stripe (Billing)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (Resend/SendGrid)
EMAIL_FROM="noreply@promeasure.com"
RESEND_API_KEY="re_..."

# Storage (AWS S3 / Cloudflare R2)
S3_BUCKET="promeasure-assets"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="..."
S3_SECRET_ACCESS_KEY="..."

# Or use Cloudflare R2 (S3-compatible)
# R2_ACCOUNT_ID="..."
# R2_ACCESS_KEY_ID="..."
# R2_SECRET_ACCESS_KEY="..."

# Monitoring (Sentry)
SENTRY_DSN="https://...@sentry.io/..."

# Feature Flags
ENABLE_BETA_FEATURES="false"
ENABLE_AI_SUGGESTIONS="false"

# Rate Limiting
UPSTASH_REDIS_URL="redis://..."
UPSTASH_REDIS_TOKEN="..."
